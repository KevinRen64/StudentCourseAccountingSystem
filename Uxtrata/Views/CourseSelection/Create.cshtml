@model Uxtrata.Models.CourseSelection

@{
    ViewBag.Title = "Create";
}

<h2>Create Course Selection</h2>

@using (Html.BeginForm("Create", "CourseSelection", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.StudentId, "Student", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(
                m => m.StudentId,
                (SelectList)ViewBag.StudentId,
                "-- Select student --",
                new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.StudentId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CourseId, "Course", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(
                m => m.CourseId,
                (SelectList)ViewBag.CourseId,
                "-- Select course --",
                new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.CourseId, "", new { @class = "text-danger" })
        </div>
    </div>

    @* Optional: include SelectionDate if your model has it *@
    @* <div class="form-group">
            @Html.LabelFor(m => m.SelectionDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.SelectionDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.SelectionDate, "", new { @class = "text-danger" })
            </div>
        </div> *@

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary" />
            @Html.ActionLink("Back to List", "Index", "CourseSelection", null, new { @class = "btn btn-default" })
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
